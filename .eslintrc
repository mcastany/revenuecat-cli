{
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "exampleGlobalVariable": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "never" ]
  },
  "plugins": []
}